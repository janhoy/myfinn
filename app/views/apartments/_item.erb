<div class="item-container">
  <div class="pull-left image-container">
    <img src="<%= apartment.image_src %>" class="img-polaroid image" />
    <div class="user-info">
      <span>Created <strong><%= apartment.created_at.strftime("%d %b %Y") %></strong> by <strong><%= apartment.user.name %></strong></span>
      <br/>
      <span><strong><%= apartment.comments.count %></strong> comment(s)</span>
    </div>
  </div>
  <div class="item-body pull-left">
    <h3><%= link_to apartment.title, "/apartments/#{apartment.id}" %></h3>
    <div class="rating">
      <div class="pull-left">
        <%= render :partial => "rating", :locals => { :apartment => apartment } %>
      </div>
      <div class="pull-left" style="margin-left:20px;">
        <img src="/assets/status<%= apartment.status %>.png" />
      </div>
      <div style="clear:both;"></div>
    </div>
    <div class="item-data">
       <div class="pull-left">
         <strong>Totalprice: </strong>
         <span><%= apartment.totalprice %></span>
         <span>NOK</span>
       </div>
       <div class="pull-left">
         <strong>Size: </strong>
         <span><%= apartment.size %></span>
       </div>
       <% if apartment.floor != 0 %>
         <div class="pull-left">
           <strong>Floor: </strong>
           <span><%= apartment.floor %></span>
         </div>
       <% end %>
       <div style="clear:both;"></div>
    </div>
    <div class="item-data">
      <% if apartment.start_date %>
        <div class="pull-left">
          <strong>Start date: </strong>
          <span><%= apartment.start_date.strftime("%d %b %Y") %>
        </div>
      <% end %>
      <% if apartment.end_date %>
        <div class="pull-left">
          <strong>End date: </strong>
          <span><%= apartment.end_date.strftime("%d %b %Y") %>
        </div>
      <% end %>
      <div style="clear:both;"></div>
    </div>
    <div class="item-data">
      <a href="<%= apartment.finn_link %>">See on Finn.no</a>
    </div>
  </div>
  <% if apartment.user == current_user %>
    <div class="pull-right" style="margin-right:10px;margin-top:5px;">
      <a href="/apartments/delete/<%= apartment.id %>"><i class="icon-remove-sign"></i></a>
    </div>
  <% end %>
<div style="clear:both;"></div>
</div>
